  <builders>
    <hudson.tasks.Shell>
      <command>cat /etc/os-release
sudo apt-get update
sudo apt-get install -y  wget tar unzip git openjdk-8-jdk openjdk-8-jre make gcc maven
export JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-s390x
export WORK_DIR=`pwd`

cd $WORK_DIR/mule
export PATH=$PATH:$WORK_DIR/mule/distributions/standalone/src/main/resources/conf
mvn clean install -DskipDistributions=false -DskipTests -Pdistributions -fn
tar xzvf $WORK_DIR/mule/distributions/standalone/target/mule-standalone-3.8.4.tar.gz -C $WORK_DIR
export PATH=$PATH:$WORK_DIR/mule-standalone-3.8.4/bin

cd $WORK_DIR
wget http://wrapper.tanukisoftware.com/download/3.5.30/wrapper-linux-390-64-3.5.30-st.tar.gz
tar -xvzf wrapper-linux-390-64-3.5.30-st.tar.gz 
cp $WORK_DIR/wrapper-linux-390-64-3.5.30-st/bin/wrapper $WORK_DIR/mule-standalone-3.8.4/lib/boot/exec

mule

cd $WORK_DIR/mule
mvn clean install -DskipDistributions=false -Pdistributions -fn


</command>
    </hudson.tasks.Shell>
