  <actions/>
  <description>Monitor changes in the /etc/apt/sources.list file to check if new repositories for ubuntu image have been added.</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.plugins.heavy__job.HeavyJobProperty plugin="heavy-job@1.1">
      <weight>1</weight>
    </hudson.plugins.heavy__job.HeavyJobProperty>
