  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec>H 15 * * 5</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>sudo apt-get update
sudo apt-get install -y docker-ce

sudo service docker start
sleep 20s
sudo service docker status

sudo docker pull s390x/ubuntu:17.10
sudo docker run --name ubuntu_1710 -d s390x/ubuntu:17.10
sudo docker ps -a
sudo docker cp ubuntu_1710:/etc/apt/sources.list .
ls
sudo sed -i &apos;/\[arch\=/d&apos; /etc/apt/sources.list
cat -n sources.list
cat -n /etc/apt/sources.list
diff -w sources.list /etc/apt/sources.list
</command>
    </hudson.tasks.Shell>
  </builders>
